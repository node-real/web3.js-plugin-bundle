    "lint": "prettier --write './src/*.{ts,tsx,js,jsx}' && eslint ./src/ --ext .js,.jsx,.ts,.tsx --fix",
    "test": "jest --runInBand './test/*' --config './test/jest.config.js'"
  },
  "contributors": [
    "rekyyang <511965710@qq.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:node-real/web3.js-plugin-bundle.git"
  },
  "dependencies": {
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "inflight": "^1.0.6",
    "rollup": "^4.18.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "web3-core": "^4.3.2",
    "web3-types": "^1.6.0"
  },
  "devDependencies": {
    "@chainsafe/eslint-config": "^2.0.0",
    "@changesets/cli": "^2.27.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.2.6",
    "eslint": "8",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.5",
    "web3": "^4.2.2"
  },
  "peerDependencies": {
    "web3": ">= 4.0.3"
  }
}
